@{
    ViewData["Title"] = "Home Page";
}
<img src="img/Netflix_Symbol_RGB.png">
<br>
@foreach (Series item in ViewBag.Series)
{
    <div class="modal fade" id="Modal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">...</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    ...
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary">Save changes</button>
                </div>
            </div>
        </div>
    </div>
    <div class="card" style="width: 18rem;">
    <img src="@item.imagen" class="card-img-top" alt="...">
        <div class="card-body">
            <h5 class="card-title">@item.nombre</h5>
            <p class="card-text">@item.sinopsis</p>
            <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#Modal">Informacion</button>
            <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#Modal">Temporadas</button>
            <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#Modal">Actores</button>
        </div>
    </div>
}
